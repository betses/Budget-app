<div class="h-screen bg-[#f1f3f2]">
    <div class="flex justify-between items-center bg-[#3671b9] w-full text-white px-3 py-3">
    <%= link_to '<-', root_path, class: "text-2xl"  %>
        <h2 class="uppercase">Expenses</h2>
        <%= form.submit "ADD", class: "cursor-pointer" %>
    </div>
    <div class="bg-[#3671b9]">
        <ul class="flex justify-between p-5 text-white">
            <li></li>
            <li>Most recent</li>
            <li>Monst ancient</li>
        </ul>
    </div>
    <% @entities.each do |entities| %>
        <%= link_to group_path(group.id) do %>
            <div class="flex p-6 rounded-lg shadow-lg bg-white my-5 mx-3">
                <%= image_tag group.icon, alt: "#{group.name}-avatar", class: "h-14 w-14 rounded-full" %>
                <div class="w-full px-3">
                    <div class="flex justify-between border-b border-[#f1f3f2] pb-2 mb-2">
                        <h2><%= group.name %></h2>
                        <h2>$17.00</h2>
                    </div>
                    <h3 class="text-xs text-[#b2b2b4]"><%= group.created_at.strftime('%d %B %Y') %></h3>
                </div>
            </div>
        <% end %>
    <% end %>
    <%= link_to new_group_entity_path(@groups.id) do %>
        <div class="p-2 w-10 bg-blue-800 text-white shadow rounded-full sticky top-full left-full mb-8 mr-5">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
            </svg>
        </div>
    <% end %>

</div>